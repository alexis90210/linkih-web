{% extends  "dashboard/_extra/_base_dashboard.html.twig" %}

{% block dashboard %}
<div class="page-content">

                    <!-- start page title -->
                    <div class="page-title-box">
                        <div class="container-fluid">
                         <div class="row align-items-center">
                             <div class="col-sm-6">
                                 <div class="page-title">
                                     <h4>Liste des categories</h4>
                                         <ol class="breadcrumb m-0">
                                             <li class="breadcrumb-item"><a href="javascript: void(0);">Linkih</a></li>
                                             <li class="breadcrumb-item active">categorie</li>
                                         </ol>
                                 </div>
                             </div>
                             <div class="col-sm-6">
                                <div class="float-end d-none d-sm-block">
                                    <a href="/creation-categorie-principale/" class="btn btn-success">Ajouter une categorie princ.</a>
                                </div>
                             </div>
                         </div>
                        </div>
                     </div>
                     <!-- end page title -->    


                    <div class="container-fluid">

                        <div class="page-content-wrapper">
                         
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card m-b-30">
                                        <div class="card-body">
                                            <h4 class="mt-0 header-title mb-4">Les categories principales</h4>
                                           <div class="table-responsive">
									<table class="table table-centered table-nowrap mb-0">
										<thead class="thead-light">
											<tr>
												<th>ID</th>
												<th>Nom</th>
                                                <th>Nom ( En Anglais)</th>
                                                <th>action</th>
											</tr>
										</thead>
										<tbody>
											

										{% for row in categorie %}
                                            <tr>
												<td>#{{ row.id}}</td>
												<td>{{ row.nom}}</td>
                                                <td>{{ row.getEnNom}}</td>
                                                <td>
                                                    <a class="btn btn-primary" href="/edit-categorie-principale-{{row.id}}"> editer la cat. principale<i class="mdi mdi-draw ms-1"></i></a>
                                                <a class="btn btn-success" href="/creation-sous-categorie-{{row.id}}/" > creer une sous categorie <i class="mdi mdi-plus ms-1"></i></a>
                                                                
                                                                 <a class="btn btn-warning" href="/liste-sous-categorie-{{row.id}}" > liste sous categorie <i class="mdi mdi-list ms-1"></i></a>
                                                                </td>
                                                               
                                                      
											</tr>
                                        {% endfor %}


										</tbody>
									</table>
								</div>
        
                                        </div>
                                    </div>
                                </div>
        
                            </div>
                            <!-- end row -->

                        </div>
        
                        
                    </div> <!-- container-fluid -->
                </div>
{% endblock %}
{% extends  "dashboard/_extra/_base_dashboard.html.twig" %}

{% block dashboard %}
	<div
		class="page-content">

		<!-- start page title -->
		<div class="page-title-box">
			<div class="container-fluid">
				<div class="row align-items-center">
					<div class="col-sm-6">
						<div class="page-title">
							<h4>Liste des Etablissements
							</h4>
							<ol class="breadcrumb m-0">
								<li class="breadcrumb-item">
									<a href="javascript: void(0);">Linkih</a>
								</li>
								<li class="breadcrumb-item active">Etablissements</li>
							</ol>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="float-end d-none d-sm-block">
							<a href="/etablissement-creation" class="btn btn-success">Creer un etablissement</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end page title -->


		<div class="container-fluid">

			<div class="page-content-wrapper">


				<div class="row">
					<div class="col-xl-3 col-lg-4">


						<div class="card">

							<div class="card-body">

								<h4 class="header-title">Filtres</h4>

								<div class="border p-3 rounded mt-4">

									<h5 class="font-size-16">Recherche</h5>

									<div class="search-box me-2 mt-3">
										<div class="position-relative">
										{{ form_start(form) }}
											{{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':"Recherchez ici..."}}) }}
											 
											<i class="ti-search search-icon"></i>
										
										</div>
										{{ form_widget(form.submit,{'attr':{'class':'btn btn-primary mt-3'}}) }}
										{{ form_end(form) }}
									</div>

								</div>
							</div>
						</div>
					</div>

					<div class="col-lg-9">
						<div class="row">
							{% for index,vendeur in vendeurs %}
								<div class="col-xl-4 col-sm-6">
									<a href={{path('app_etablissement_detail',{'id':vendeur.id})}}>
									<div class="card">
										<div class="card-body">
											<div class="product-img">
												{# <div class="product-ribbon  bg-primary">
													25% Off
												</div> #}

												<img src={{vendeur.logo??"assets/images/salon-de-coiffure.png"}} alt="" class="img-fluid mx-auto d-block" width="70px">
											</div>


											<div class="text-center">

												<a class="text-dark">
													<h5 class="font-size-15">{{ vendeur.nom}}</h5>
												</a>

												<h4 class="mt-3 mb-0 font-size-15">{{ vendeur.adresse}}</h4>

												<div class="mt-3">
													<ul class="list-inline">
														<li class="list-inline-item">
															{%if(moyennes[index]==0)%}
										{%elseif(moyennes[index]==1)%}
											<span class="mdi mdi-star text-warning"></span>
										{%elseif(moyennes[index]==1.5)%}
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star-half text-warning"></span>
										{%elseif(moyennes[index]==2)%}
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>	
										{%elseif(moyennes[index]==2.5)%}
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star-half text-warning"></span>
																			
										{%elseif(moyennes[index]==3)%}
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
										{%elseif(moyennes[index]==3.5)%}
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star-half text-warning"></span>
										{%elseif(moyennes[index]==4)%}
														<span class="mdi mdi-star text-warning"></span>
														<span class="mdi mdi-star text-warning"></span>
														<span class="mdi mdi-star text-warning"></span>
														<span class="mdi mdi-star text-warning"></span>
										{%elseif(moyennes==4.5)%}
																								<span class="mdi mdi-star text-warning"></span>
														<span class="mdi mdi-star text-warning"></span>
														<span class="mdi mdi-star text-warning"></span>
														<span class="mdi mdi-star text-warning"></span>
														<span class="mdi mdi-star-half text-warning"></span>
										{%else%}

											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
											<span class="mdi mdi-star text-warning"></span>
										
										{%endif%}

															
															
														</li>

													</ul>
												</div>

											</div>
										</div>
									</div>
									</a>
								</div>

							{% endfor %}

						</div>


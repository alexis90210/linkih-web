{% extends  "dashboard/_extra/_base_dashboard.html.twig" %}

{% block dashboard %}
<div class="page-content">

                    <!-- start page title -->
                    <div class="page-title-box">
                        <div class="container-fluid">
                         <div class="row align-items-center">
                             <div class="col-sm-6">
                                 <div class="page-title">
                                     <h4>Liste des clients</h4>
                                         <ol class="breadcrumb m-0">
                                             <li class="breadcrumb-item"><a href="javascript: void(0);">Linkih</a></li>
                                             <li class="breadcrumb-item active">Clients</li>
                                         </ol>
                                 </div>
                             </div>
                             <div class="col-sm-6">
                                <div class="float-end d-none d-sm-block">
                                    {# <a href="/create-client" class="btn btn-success">Ajouter manuellement un client</a> #}
                                </div>
                             </div>
                         </div>
                        </div>
                     </div>
                     <!-- end page title -->    


                    <div class="container-fluid">

                        <div class="page-content-wrapper">
                         



                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card m-b-30">
                                        <div class="card-body">
                                            <h4 class="mt-0 header-title mb-4">Les clients</h4>
                                           <div class="table-responsive">
									<table class="table table-centered table-nowrap mb-0">
										<thead class="thead-light">
											<tr>
												<th>ID</th>
												<th>Photo</th>
												<th>Nom</th>
												<th>Email</th>
												<th>Pays</th>
											</tr>
										</thead>
										<tbody>
											

										{% for client in clients %}
                                            <tr>
												<td>#{{ client.id }}</td>
												<td><img src="assets/images/logo.png" width="42" class="me-3" alt="">Green Chair</td>
												<td> {{ client.nom}}</td>
												<td> {{ client.email }}</td>
												<td>
													{{ client.pays}}
												</td>
											</tr>
                                        {% endfor %}


										</tbody>
									</table>
								</div>
        
                                        </div>
                                    </div>
                                </div>
        
                            </div>
                            <!-- END ROW -->
        
                                
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="text-center my-3">
                                        <a href="javascript:void(0);" class="text-primary"><i class="mdi mdi-loading mdi-spin font-size-20 align-middle me-2"></i> Load more </a>
                                    </div>
                                </div>
                            </div>
                            <!-- end row -->

                        </div>
        
                        
                    </div> <!-- container-fluid -->
                </div>
{% endblock %}